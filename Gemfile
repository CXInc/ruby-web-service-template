source 'http://rubygems.org'

# Analytics
gem "newrelic_rpm"

# Parse JSON body of requests
gem "rack-parser", require: "rack/parser"

# Running tests
gem "rake"

# Application config
gem "settingslogic"

# Web framework
gem "sinatra"

# Extras for Sinatra
gem "sinatra-contrib"

# Web server
gem "unicorn"

group :test do
  # Acceptance tests
  gem "cucumber"

  # Acceptance tests
  gem "capybara"

  # Unit tests and expectations for integration tests
  gem "rspec"

  # For cucumber tests that check JSON handling
  gem 'json_spec'

  # Debugging
  gem 'pry'
end
